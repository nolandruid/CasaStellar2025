generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/client"
}

datasource db {
  provider = "postgresql"
}

model Employer {
  id          String   @id @default(uuid())
  email       String   @unique
  password    String // Debe ser hasheada antes de guardar
  firstName   String
  lastName    String
  companyName String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relación con empleados
  employees Employee[]

  @@map("employers")
}

model Employee {
  id            String   @id @default(uuid())
  firstName     String
  lastName      String
  salary        Decimal // XLM amount (e.g., 3500.50)
  walletAddress String
  department    String? // Opcional
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now()) @updatedAt

  // Relación con empleador (opcional por ahora para migración)
  employerId String?
  employer   Employer? @relation(fields: [employerId], references: [id], onDelete: Cascade)

  @@map("employees")
}
